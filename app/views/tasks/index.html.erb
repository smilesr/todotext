<header>
<h1 class="headline_task">
  <%= @user.username %>'s Dashboard
</h1>
<%= link_to 'Log out', logout_path, method: :delete %>
</header>

<table class="table table-striped">
<thead>
  <tr>
    <th>TASK</th>
    <th>DUE DATE</th>
    <th>COMPLETED?</th>
  </tr>
</thead>
<tbody>
   <% @tasks.each do |task| %>

    <tr class="task-wrapper">
      <td> <%= task.content %></td>
      <td> <%= task.due_date.strftime("%A, %B %-d, %Y") %></td>
   
      <td> <%= link_to 'Did it!', task, method: :delete, :remote => true, :class => 'delete_task' %> </td>
    </tr>
    <% end %>
</tbody>
</table>


<p><%=link_to 'Add New Task', new_task_path %> </p>

<p><%=link_to 'Text list to phone', '/notifications/notify'%> </p>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>



